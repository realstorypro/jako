#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require 'commander/import'
require './lib/node'
require './lib/helpers/utils'

@utils = Utils.instance

program :name, 'Jako'
program :version, '0.5.0'
program :description, 'Factory worker with attitude'

default_command :prompt

command :prompt do |c|
  c.syntax = 'jako'
  c.description = 'jako default prompt'
  c.action do
    welcome_message
    choose do |menu|
      menu.choice('Add blueprint') do
        Node.instance.new_blueprint
      end
      menu.choice('Create a build') do
        @utils.divider
        Node.instance.build()
      end
      menu.choice('Bootstrap the build') do
        @utils.divider
        Node.instance.bootstrap()
      end
      menu.choice('Publish build') do

      end
    end
  end
end

private

def welcome_message
  @utils.divider
  puts '-------------------- Hello, I am JAKO --------------------'
  puts '-------------------- AI with Attitude --------------------'
  @utils.divider
end
